@import './mixins.css.scss';

@font-face {
  font-family: 'source_sans_proregular';
  src: url(<%= asset_path('sourcesanspro-regular-webfont.eot') %>);
  src: url(<%= asset_path('sourcesanspro-regular-webfont.eot') %>) format('embedded-opentype'),
       url(<%= asset_path('sourcesanspro-regular-webfont.woff') %>) format('woff'),
       url(<%= asset_path('sourcesanspro-regular-webfont.ttf') %>) format('truetype'),
       url(<%= asset_path('sourcesanspro-regular-webfont.svg') %>) format('svg');
  font-weight: normal;
  font-style: normal;
}

$black: #00091a;
$white: #fefefe;
$blue: #00a6ff;
$gray: #DBDEE4;

html, body {
  height: 100%;
}

body {
  margin-top: 40px;
  font-family: 'source_sans_proregular';
}

.navbar {
  .navbar-inner {
    background: $black;
    color: $white;
    h1 {
      margin: 0px;
      display: block;
      line-height: 40px;
      text-align: center;
      text-transform: capitalize;
      font-size: 24px;
      font-weight: 600;
    }

    .settings {
      margin-top: 3px;
      margin-right: 3px;
      width: 34px;
      height: 34px;
      background-image: url(<%= asset_path('gears.png') %>);
      background-size: 34px 34px;
    }
  }
}

#main {
  margin-left: -20px;
  padding-left: 40px;
  @include box_shadow(0px 0px 20px rgba(50, 50, 50, 0.75));
}

#author-info {
  position: absolute;
  top: 39px;
  left: 640px;
  width: 170px;
  padding: 6px;
  padding-top: 0px;
  border: 1px solid $black;
  background-color: $white;

  h3 {
    font-size: 14px;
    line-height: 14px;
    margin-top: 4px;
    margin-bottom: 4px;
  }

  p {
    font-size: 12px;
  }
}

.profile-stats {
  line-height: 26px;
  font-size: 16px;
}

#main-nav {
  background: $black;
  color: $white;
  text-align: center;

  position: fixed;
  margin-left: 80px;

  ul {
    li {
      padding-top: 4px;

      a {
        color: $white;

        &:hover {
          text-decoration: none;
        }
      }

      &.active {
        background-color: $blue;
      }

      .icon {
        margin-left: 14px;
        margin-right: 0px;
      }

      &.timeline {
        .icon {
          background-image: url(<%= asset_path('timeline.png') %>);
          background-size: 32px 31px;
          width: 32px;
          height: 31px;
        }
      }

      &.mentions {
        .icon {
          background-image: url(<%= asset_path('mentions.png') %>);
          background-size: 32px 29px;
          width: 32px;
          height: 29px;
        }
      }

      &.profile {
        .icon {
          background-image: url(<%= asset_path('profile.png') %>);
          background-size: 32px 28px;
          width: 32px;
          height: 28px;
        }
      }

      &.site_feed {
        .icon {
          background-image: url(<%= asset_path('site_feed.png') %>);
          background-size: 32px 32px;
          width: 32px;
          height: 32px;
        }
      }

      &.search {
        .icon {
          background-image: url(<%= asset_path('search.png') %>);
          background-size: 32px 32px;
          width: 32px;
          height: 32px;
        }
      }
    }
  }
}

li.post {
  &.conversation {
    border-top: 3px solid $gray;
    border-bottom: 4px solid $gray;

    margin-top: 20px;
    margin-bottom: 20px;

    .parents, .children {
      li.post {
        background-color: $gray;
      }
    }
  }

  h5 {
    margin: 0px;
  }

  .post-date {
    float: right;
    margin-left: 12px;
  }

  .post.repost {
    margin-left: -50px;
    .post-container {
      width: 550px;
    }
  }

  .actions {
    .action {
      visibility: hidden;
      margin-right: 60px;
      i {
        background-size: 14px 14px;
        width: 14px;
        height: 14px;
        display: inline-block;
        cursor: pointer;

        &.reply {
          background-image: url(<%= asset_path('reply.png') %>);
        }

        &.repost {
          background-image: url(<%= asset_path('repost.png') %>);
        }

        &.edit {
          background-image: url(<%= asset_path('edit.png') %>);
        }

        &.conversation {
          background-image: url(<%= asset_path('conversation.png') %>);
        }
      }
    }
  }

  &:hover {
    > .row > .post-container > .actions {
      .action {
        visibility: visible;
      }
    }
  }
}

.new-post-form, .reply-post-form, .edit-post-form {
  margin-bottom: 8px;
  .char-limit {
    margin-top: 14px;
    margin-right: 12px;
  }
}

.followings {
  .m-btn {
    margin-top: 0px;
  }
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  position: fixed;
  bottom: 24px;
  left: 8px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

.no-offset {
  margin-left: 0px;

  &.span7 {
    width: 560px;
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

.has-overflow {
  word-break: break-word;
  word-wrap: break-word;
}

img.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
}

img.avatar-medium {
  width: 57px;
  height: 57px;
  margin-right: 4px;
}

img.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

#iframe-cache {
  display: none;
}

.label-info {
  background-color: #0099ff;
}

