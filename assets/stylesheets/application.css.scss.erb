//---------------------
//
// BASIC ELEMENT STYLES
//
//---------------------

html, body {
  height: 100%;
}

body {
  font-family: $paragraphFont;
}

h1,h2,h3,h4 {
  font-weight:600;
  font-family: $headingFont;
}
h5,h6 {
  font-weight:normal;
  font-family: $headingFont;
}

.table .align-middle {
  vertical-align:middle;
}

.fetch-posts-pool {
  display: block;
  margin-right: 16px;
}

//---------------------
//
// LAYOUT
//
// note that these are for mobile view,
// desktop rules come after breakpoints
//---------------------

#main-container {
  @include clearfix;
  margin-top: em($lineHeight);
  width:100%;
}

#main .row {
  margin-left:0;
}

#main {
  width:90%;
  margin-left:5%;
}

#author-info {
  // Hidden in mobile view
  display:none;
}

//---------------------
//
// VERTICAL NAVIGATION BAR (GREEN)
//
//---------------------

.v-navbar-fixed-left {
  @include clearfix;
  z-index:10;
  position:fixed;
  bottom:0;
  left:0;
  right:0;
  padding-top:$navIconMargin;
  padding-bottom: $navIconMargin;

  background-color: $mainColor;
  color: $white;

  border-width: 1px 0 0 0;
  border-style:solid;
  border-color:darken($mainColor, 7%);
}

  // Icons inside the nav bar
  .nav-icon {
    color:darken($mainColor, 8%);
    padding: 7px 5px 7px 5px;
    line-height: 0;

    border-width:1px;
    border-style:solid;
    border-radius: 4px;

    @include background-image(linear-gradient(lighten($mainColor, 5%), $mainColor));
    background-color: lighten($mainColor, 10%);
    border-color: darken($mainColor, 7%);
    @include text-shadow(0 -1px 0 darken($mainColor, 13%));

    float:right;
    margin-right:$navIconMargin;
    @include transition-property(color);
    @include transition-duration(0.2s);

    &:hover {
      text-decoration:none;
      color: darken($mainColor, 15%);
    }

    &:active {
      @include background-image(linear-gradient(darken($mainColor, 5%), $mainColor));
      color: darken($mainColor, 20%);
    }
  }

  // Style for the selected icon
  .nav-selected .nav-icon {
    background-image:none;
    background-color: darken($mainColor, 10%);
    border-color: darken($mainColor, 15%);
    text-shadow:none;
    color:lighten($mainColor, 5%);
  }

//---------------------
//
// APP NAVIGATION BAR (GRAY)
//
//---------------------

#main-nav {
  @include clearfix;
  background: $secondaryColor;
  color: $black;
  text-align: left;

  border-color: darken($secondaryColor, 5%);
  border-style:solid;
  border-width: 0 0 1px 0;

  line-height: 1.5rem;
  z-index: 1031;
}

// App name
.brand {
  //Not displaying in the proprietary version
  display:none;

  float:left;
  margin:0;
  line-height:em($lineHeight * 4, 36px);
}

// Menu button, shown only on mobile and tablet viewports
.menu-switch {
  display:block;
  text-align:center;
  font-size:em(18px);
  line-height: em($lineHeight * 4 / em(18px));
  cursor:pointer;
}

// List (timeline, mentions, profile..)
.app-nav-list {
  clear:both;
  display:none;
  width:100%;
  margin-top: em($lineHeight);
  float:left;

  a {
    color: $grayTextColor;
  }
}

  // List elements
  .app-nav-list {

    li {
      text-align:center;
      padding: em($lineHeight);
      padding-top: em($lineHeight);
      padding-bottom: em($lineHeight);
      padding-left: em($lineHeight);
      font-size: em(20px);
      border-color: darken($secondaryColor, 10%);
      border-style:solid;
      border-width: 0;
    }

    .brand {
      h1 {
        font-size: 1.5rem;
        margin: 0px;
      }
      margin-bottom: 10px;
    }

    a {
      @include transition-property(color);
      @include transition-duration(0.2s);
    }

    a:hover {
      color: darken($grayTextColor, 30%);
      text-decoration: none;
    }

    a.active li {
      background-color: lighten($secondaryColor, 5%);
      border-width: 1px 0;
      color: darken($grayTextColor, 30%);
    }
  }

    // Some spacing for icons in the list
    .app-nav-list i {
      margin-right:0.5em;
    }


.mentions-autocomplete, .search-input {
  margin-bottom:em($lineHeight);
}

.post-profile-name a {
  font-weight:600;
  color: $paragraphColor;
}

//---------------------
//
// SIGNUP BUTTON
//
//---------------------

#signup {
  position: fixed;
  top: 6px;
  right: 6px;
}

//---------------------
//
// PROFILE VIEW
//
//---------------------


.page-header {
  margin-top:0;
  text-align:center;
}

.profile-entity {
  font-size: em(18px);
  color: $grayTextColor;
}

.page-header .profile-name {
  margin-bottom: em($lineHeight / 6);
}

.profile-name {
  line-height:1em;
  margin:0;
  & a:visited {
    color: $paragraphColor;
  }
}

.profile-count-infos {
  margin-top: em($lineHeight);
  margin-bottom: em($lineHeight);
  width:100%;
  text-align:center;
  table-layout:fixed;

  a {
    display:block;
  }

  .count-number {
    display:block;
    font-size:em(20px);
    width:30%;
    margin: 0 auto;
  }
}

.table td {
  border-width:0;
}

.profile-left {
  margin-top: em($lineHeight);
}

.profile-right {
  width:100%;
}

.avatar-table-column {
  width:42px;
}

.post-container {
  width:80%;
  float:right;

  .post-container {
    width: 70%;
  }
}

.table .post-name {
  font-size: em(20px);
  font-weight:600;
  color: $paragraphColor;
  & a:visited {
    color:$paragraphColor;
  }
}

//---------------------
//
// FEED
//
//---------------------

.post-body p {
  margin-top: em($lineHeight / 6);
  margin-bottom:0;
}

.post .post-name {
  color: darken($mainColor, 25%);
  font-size: em(16px);
}

.post {

  &.conversation {
    padding-top: em($lineHeight);
    padding-bottom: em($lineHeight);
    padding-left:0;
    padding-right:0;

    margin-top: em($lineHeight);
    margin-bottom: em($lineHeight);
  }

  h5 {
    margin: 0px;
    line-height:1em;
  }

  .post-date {
    color:$grayTextColor;
    float: right;
    margin-left: 12px;
    font-size: 0.9em;
  }

  &:hover {
    > .row > .post-container .actions {
      .action {
        opacity:1;
      }
    }
  }
}

.parents, .children {
  position:relative;
  .post {
    padding-top: em($lineHeight);
    padding-bottom: em($lineHeight);
    //background-color: lighten($secondaryColor, 5%);
    border-style:solid;
    border-color: darken($secondaryColor, 10%);
  }
}

.parents .post {
  margin-bottom: em($lineHeight);
  border-width: 0 0 2px 0;

  &:after {
    content: ' ';
    display:block;
    width:0;
    height:0;
    border-width: 12px;
    border-style:solid;
    border-color: transparent transparent darken($secondaryColor, 10%) transparent;
    position:absolute;
    left: em($lineHeight * 2);
    bottom:0;
    z-index:2;
  }
}
.children .post {
  margin-top: em($lineHeight);
  border-width: 2px 0 0 0;

  &:after {
    content: ' ';
    display:block;
    width:0;
    height:0;
    border-width: 12px;
    border-style:solid;
    border-color: darken($secondaryColor, 10%) transparent transparent transparent;
    position:absolute;
    left: em($lineHeight * 2);
    top:0;
    z-index:2;
  }
}

.repost {
  margin-top: em($lineHeight);
  margin-bottom: em($lineHeight / 2);
}

.action {
  margin-right: 30px;
  display: inline;
  cursor: pointer;
  color: rgba(0,0,0,0.6);
  @include transition-property(color, opacity);
  @include transition-duration(0.2s, 0.2s);

  &:hover {
    color: rgba(0,0,0,0.9);
  }
}

.actions {
  margin-bottom: em($lineHeight);
}

#main.no-actions {
  .post {
    margin-bottom: em($lineHeight);
  }
}

.repost-label {
  font-size: em(12px);
  color: lighten($paragraphColor, 30%);
  .post-name {
    font-size: em(12px, 12px);
    color: lighten($paragraphColor, 30%);
  }
}

//---------------------
//
// FORMS
//
//---------------------

.post-button {
  font-size:em(16px);
}

.new-following-form {
  margin-bottom:0;
}

.new-post-container, .search-form {
  margin-bottom: em($lineHeight);
}

.new-post-form, .reply-post-form, .edit-post-form {
  margin-bottom: 8px;
  .char-limit {
    line-height:em(30px);
    margin-right: 12px;
  }
}

.edit-post-form .btn {
  margin-left:em($lineHeight / 2);
}

.followings {
  .m-btn {
    margin-top: 0px;
  }
}

.parents {
  position:relative;
}

.parent-triangle {
  display:block;
  width:0;
  height:0;
  border-width:12px;
  border-style:solid;
  border-color: transparent transparent transparent $secondaryColor;
  position:absolute;
  bottom:0;
  left:- em($lineHeight + 8px);
  z-index:5;
}

//---------------------
//
// AVATARS
//
//---------------------

.profile-avatar {
  margin-bottom: em($lineHeight);
}

.avatar-container {
  float:left;
}

// never rendered when empty
// added height to prevent view from jumping when avatars load
.mention-avatars {
  height: 21px;
}

.mention-avatars .avatar {
  width: 21px;
  height: 21px;
  border-radius:4px;
  margin-right:4px;
}

.avatar {
  width: 42px;
  height: 42px;
  margin-right: 4px;
  border-radius:4px;
}

.avatar-medium {
  width: 57px;
  height: 57px;
  margin-right: 4px;
}

.avatar-large {
  max-width: 100px;
  max-height: 150px;
  min-width: 100px;
  min-height: 100px;
}

//---------------------
//
// MISC
//
//---------------------

.show {
  display:block;
}

#loading-indicator {
  @include rounded(4px);
  @include transparent(0);
  @include transition(opacity, ease-in-out, 1s, 0s);

  z-index: 10000;

  position: fixed;
  bottom: 8px;
  left: 76px;

  width: 8px;
  height: 8px;
  background-color: #0099FF;

  &.pulse {
    @include transparent(100);
  }
}

.no-offset {
  margin-left: 0px;

  &.span7 {
    width: 560px;
  }
}

textarea {
  resize: none;
  &::-webkit-input-placeholder {
    padding-top: 20px;
    text-align: center;
  }
}

.has-overflow {
  word-break: break-word;
  word-wrap: break-word;
}

#iframe-cache {
  display: none;
}

.label-info {
  background-color: #0099ff;
}

//---------------------
//
// BREAKPOINTS (everything above is the mobile view)
//
//---------------------

@media screen and (min-width: 27em) {
  .post-container {
    width:85%;
  }
}

// First breakpoint where content width isn't 100%
@media screen and (min-width: 37em) {
  .custom-container {
    width:$feedWidth;
    margin-left:auto;
    margin-right:auto;

    &.unstyled {
      margin-left:auto;
    }
  }

  #main-container {
    width:$feedWidth;
    margin-left: auto;
    margin-right: auto;
  }
  #main {
    margin-left:0;
    width: $feedWidth;
  }

  .post {
    width:$feedWidth - em($lineHeight * 2);
  }

  .post-container {
    width: em(560px - 42px - 10px);

    .post-container {
      width: em(560px - 42px - 20px - 42px - 10px);
    }
  }

  .profile-right {
    width:auto;
    margin-left: em($lineHeight);
  }

  .page-header {
    text-align:left;
  }

  .profile-avatar {
    float:left;
  }
}

// Desktop breakpoint, moving navs to the left
@media screen and (min-width: 70em) {

  .following .table tr, .followers .table tr {
    min-height: 42px;
  }

  .followings .table tr:hover, .followers .table tr:hover {
    background-color: lighten($secondaryColor, 5%);
  }

  .app-nav-list {
    display:block;
    width:auto;
    margin-top: 0;
    width: $vNavWidth + 84px;
  }

  .app-nav-list li {
    text-align:left;
    font-size: em(16px);
    line-height: em($lineHeight * 2);
    padding-top:0;
    padding-bottom:0;
    padding-right: em($lineHeight * 2);
  }

  .custom-container {
    width:auto;
    margin-left:auto;
    margin-right:auto;

    &.unstyled {
      margin-left:auto;
    }
  }

  #main {
    width: $feedWidth;
    margin-left: 0;
  }

  .v-navbar-fixed-left {
    position: fixed;
    top: 0px;
    left: 0px;
    right:auto;
    bottom: 0px;
    padding-left:$navIconMargin;
    border-width: 0 1px 0 0;
  }

    .nav-icon {
      margin-bottom:$navIconMargin;
    }

  .menu-switch {
    display:none;
  }


  #main-nav {
    position:fixed;
    left:$navIconMargin * 2 + 48px;
    top:0;
    bottom:0;
    text-align: center;

    border-width: 0 1px 0 0;

    z-index: 1031;
  }

  #main-container {
    margin-left:$vNavWidth + 170px;
    width: auto;
  }

  .posts {
    width: $feedWidth;
  }
  .actions {
    margin-bottom: 0;
  }

  .action {
    opacity:0;
  }

  .post {
    &:hover {
      > .row > .post-container .actions {
        .action {
          opacity:1;
        }
      }
    }
  }

  #author-info {
    display:block;
    position: absolute;
    top: 39px;
    width: 18em;
    left: $content_width + $vNavWidth + 260px;
    padding: em($lineHeight);
    border-width: 0 0 0 2px;
    border-style:solid;
    border-color: $secondaryColor;
    background-color: $white;

    h3 {
      font-size: em(18px);
      font-weight:600;
      line-height: em(18px);
      margin:0;
      max-width: 130px;
      word-wrap: break-word;
    }
  }

  .author-info-triangle {
    display:block;
    width:0;
    height:0;
    border-width:12px;
    border-style:solid;
    border-color: transparent $secondaryColor transparent transparent;
    position:absolute;
    top: em($lineHeight);
    left:- em($lineHeight + 8px);
    z-index:5;
  }

  .author-info-bio {
    margin-top: em($lineHeight);
  }
  .author-info-top-container {
    @include clearfix;
  }
  ul.author-count-infos {
    margin-left: em($lineHeight);
  }

  .fetch-pool {
    width: $content_width;
  }

  .content-width {
    width: $content_width;
  }
}
