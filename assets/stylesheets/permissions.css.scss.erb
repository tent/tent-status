@import './mixins.css.scss';
$blue: #0099ff;
$green: #35aa47;

.permissions-options-container, .mentions-autocomplete {
  display: inline-block;
  position: relative;

  ul.options li.option .text, ul.options li.option .remove, .show-option-picker {
    font-size: 11.844px;
    font-weight: bold;
    line-height: 14px;
    height: 14px;
    padding: 6px;
  }

  .show-option-picker {
    display: block;
    float: left;
    padding: 4px 0px;
    margin-top: 14px;
    color: $blue;
    cursor: pointer;

    &:hover {
      color: $blue - hsl(14, 0, 26) + hsl(0, 10, 0);
    }
  }

  ul.options {
    list-style: none;
    margin: 0px;
    margin-left: 6px;
    margin-top: 8px;
    padding: 0px;
    float: left;

    border: 1px solid #DCDCDC;
    background-color: #FEFEFE;
    padding: 2px;
    position: relative;
    width: 374px;
    min-height: 28px;
    cursor: text;

    li.option {
      float: left;
      margin-right: 2px;

      cursor: default;

      color: #FEFEFE;
      @include button-gradient($blue);

      @include rounded(3px);
      border: 1px solid #DCDCDC;

      &.green {
        @include button-gradient($green);
      }

      .remove:hover, .remove.active {
        @include active-button-gradient($blue);
      }

      &.green .remove:hover, &.green .remove.active {
        @include active-button-gradient($green);
      }

      .text, .remove {
        display: block;
        float: left;

        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
        white-space: nowrap;
        vertical-align: baseline;
      }

      .text {
        padding-right: 3px;

        @include border-top-left-radius(2px);
        @include border-bottom-left-radius(2px);
      }

      .remove {
        cursor: pointer;

        @include border-top-right-radius(2px);
        @include border-bottom-right-radius(2px);
      }
    }
  }

  .option-picker ul.picker-options li.option, .picker-input {
    padding: 6px;
    border-top: 1px solid #DCDCDC;
  }

  .option-picker {
    position: absolute;
    left: 34px;
    top: 100%;
    background-color: #FEFEFE;
    border: 1px solid #DCDCDC;
    border-top: 0px;
    cursor: default;
    width: 378px;

    ul.picker-options {
      list-style: none;
      padding: 0px;
      margin: 0px;
      max-height: 203px;
      position: relative;
      overflow-y: auto;

      li.option {
        cursor: pointer;

        &.active {
          color: #FEFEFE;
          background-color: $blue;
          &.green {
            background-color: $green;
          }
        }
      }
    }
  }

  .picker-input {
    border-top: 0px;
    padding-left: 0px;
    padding-top: 4px;
    padding-bottom: 0px;
    float: left;

    input[type=text] {
      display: inline-block;
      outline: 0;
      width: 20px;
      border: 0px;
      padding: 0px;
      box-shadow: none;

      &:focus {
        outline: 0;
      }
    }
  }

  .loading {
    @include rounded(4px);
    @include transparent(0);
    @include transition(opacity, ease-in-out, 1s, 0s);

    position: absolute;
    top: 14px;
    right: 6px;

    width: 8px;
    height: 8px;
    background-color: #0099FF;

    &.pulse {
      @include transparent(100);
    }
  }
}

.mentions-autocomplete {
  display: block;
  .option-picker {
    z-index: 200;
    border-top: 0px;
    border-bottom: 0px;
  }
}

.edit-post-form {
  .permissions-options-container {
    ul.options {
      width: 256px;
    }

    .option-picker {
      width: 252px;
    }
  }
}
