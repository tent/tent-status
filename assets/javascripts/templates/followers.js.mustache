<div class="row">
  <div class="span2">&nbsp;</div>
  <div class="span8">
    {{#followers.length}}

    {{#guest_authenticated}}
    <h1 class="page-header">
      Followers of <small><a href='{{domain_entity}}'>{{formatted.domain_entity}}</a></small>
    </h1>
    {{/guest_authenticated}}
    
    {{^authenticated}}
    <h1 class="page-header">
      Followers of <small><a href='{{domain_entity}}'>{{formatted.domain_entity}}</a></small>
    </h1>
    {{/authenticated}}
    
    {{#authenticated}}
    {{^guest_authenticated}}
    <h1 class="page-header">Your Followers</h1>
    {{/guest_authenticated}}
    {{/authenticated}}
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Entity</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>{{#followers}}{{> _follower}}{{/followers}}</tbody>
    </table>

    {{/followers.length}}
    
    {{^followers.length}}

    {{#guest_authenticated}}
    <h1 class="page-header">
      <small><a href='{{domain_entity}}'>{{formatted.domain_entity}}</a></small> doesn't have any followers yet
    </h1>
    {{/guest_authenticated}}
    
    {{#authenticated}}
    {{^guest_authenticated}}
    <h1 class="page-header">You don't have any Followers yet</h1>
    {{/guest_authenticated}}
    {{/authenticated}}
    
    {{/followers.length}}
  </div>
</div>
