<div class="row">
  <div class="span1 avatar-container">
    <a href="{{profileUrl}}"><img class="img-rounded pull-left avatar" src="{{avatar}}" /></a>
  </div>
  {{#has_parent}}
  <div class="span6 post-header">
  {{/has_parent}}
  {{^has_parent}}
  <div class="span7 post-header">
  {{/has_parent}}
    <h5>
      {{#hasName}}
      <a href="{{profileUrl}}">{{name}} <small>{{formatted.entity}}</small></a>
      {{/hasName}}
      
      {{^hasName}}
      <a href="{{profileUrl}}">{{formatted.entity}}</a>
      {{/hasName}}

      <div class="post-date">
        <a class="{{#has_parent}}gray{{/has_parent}}" href="{{url}}" data-view='RelativeTimestamp' data-datetime='{{published_at}}' title="{{formatted.full_published_at}}">{{formatted.published_at}}</a>
      </div>
    </h5>
  </div>
  {{#in_reply_to}}
  {{#authenticated}}
  <div class="span4 post-sub-header">
    <a href="{{url}}"><small>in reply to {{name}}</small></a>
  </div>
  {{/authenticated}}
  {{/in_reply_to}}
  
  {{^repost}}
  <p class="{{#has_parent}}span6{{/has_parent}}{{^has_parent}}span7{{/has_parent}} post-body has-overflow">
    {{{formatted.content.text}}}
  </p>
  {{/repost}}
  
  {{#repost}}
  <div class="span7 repost post">{{> _post_inner}}</div>
  {{/repost}}
</div>

{{#authenticated}}
<div class="row showOnHover actions">
  <div class='{{^has_parent}}span7{{/has_parent}}{{#has_parent}}span6{{/has_parent}} offset1'>
    {{^is_repost}}
    <a class="reply {{#has_parent}}reply-repost{{/has_parent}}" href="#"><i class='sicon-reply'></i>&nbsp;<span class='text'>Reply</span></a>

    {{^currentUserOwnsPost}}
    {{#has_parent}}
    <span class="mobile-hide"><i class='sicon-repost'></i>&nbsp;Reposted by {{parent.name}}</span>
    {{/has_parent}}
    
    {{^disable_repost}}
    <a class="repost {{#has_parent}}repost-repost{{/has_parent}}" data-confirm="Repost {{name}}?" href="#"><i class='sicon-repost'></i>&nbsp;<span class='text'>Repost</span></a>
    {{/disable_repost}}

    {{#disable_repost}}
    {{^has_parent}}
    <span><i class='sicon-repost'></i>&nbsp;<span class='text'>Reposted</span></span>
    {{/has_parent}}
    {{/disable_repost}}
    {{/currentUserOwnsPost}}
    {{/is_repost}}
    
    {{#is_repost}}
    <a class="reply" data-id="{{id}}" href="#"><i class='sicon-reply'></i>&nbsp;<span class='text'>Reply</span></a>
    {{/is_repost}}
    
    {{#currentUserOwnsPost}}
    <a class="delete {{#has_parent}}delete-repost{{/has_parent}}" data-confirm="Delete Post?" data-id="{{id}}" href="#"><i class='sicon-delete'></i>&nbsp;Delete</a>
    {{/currentUserOwnsPost}}

    <small class="pull-right">via {{app.name}}</small>
  </div>
</div>
{{/authenticated}}

